{% extends 'main/baseinfos.html.twig' %}

{% block title %}Modification de l'entretien
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/entretiens.min.css')}}">
	<link rel="stylesheet" href="{{ asset('assets/css/accueil.min.css')}}">
{% endblock %}

{% block infos %}

    <div>
        {{ form_errors(entretiensForm) }}

        {{ form_start(entretiensForm) }}

        {{ form_row(entretiensForm.commentaire, {label: 'Résumé de l\'entretien : ', value: valeurs.commentaire}) }}
        <div>
            {{ form_row(entretiensForm.date, {label: 'Date : ', value: valeurs.date}) }}
            <button>Valider</button>
        </div>

        {{ form_end(entretiensForm) }}
    </div>

    <a href="{{ path('_suivi', {id: eleves.id}) }}">+ Ajouter un entretien</a>

    <div>
        {% for entretien in infosEntretiens %}
            <a href="{{ path('_suivimodif', {id: entretien.id}) }}"{% if entretien.id is same as(id) %} class="selectionne"{% endif %}>
                <div>
                    <p><span>Résumé de l'entretien :</span> {{ entretien.commentaire }}</p>
                    <p><span>Date :</span> {{ entretien.date }}</p>
                </div>
            </a>
        {% endfor %}
    </div>

{% endblock %}